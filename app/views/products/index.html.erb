<h1>All Chocolates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Origin Country</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand.name if product.brand %></td>
        <td>
          <% if product.countries.any? %>
            <%= product.countries.map(&:name).join(", ") %>
          <% else %>
            Unknown
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
