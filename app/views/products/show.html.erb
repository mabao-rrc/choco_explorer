<h1><%= @product.name %></h1>

<% if @product.image_url.present? %>
  <img src="<%= @product.image_url %>" alt="<%= @product.name %>" width="300">
<% end %>

<p><strong>Ingredients:</strong> <%= @product.ingredients %></p>
<p><strong>Nutrition Info:</strong> <%= @product.nutrition_info %></p>

<p><strong>Brand:</strong> 
  <%= link_to @product.brand.name, brand_path(@product.brand) if @product.brand %>
</p>

<p><strong>Origin Countries:</strong>
  <%= @product.countries.map { |c| link_to c.name, country_path(c) }.join(', ').html_safe if @product.countries.any? %>
</p>

<p><strong>Categories:</strong>
  <%= @product.categories.map { |cat| link_to cat.name, category_path(cat) }.join(', ').html_safe if @product.categories.any? %>
</p>

<p><%= link_to "Back to Products", products_path %></p>
