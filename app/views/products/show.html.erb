<h1><%= @product.name %></h1>

<% if @product.image_url.present? %>
  <img src="<%= @product.image_url %>" alt="<%= @product.name %>" width="300">
<% end %>

<p><strong>Ingredients:</strong> <%= @product.ingredients %></p>
<p><strong>Nutrition Info:</strong> <%= @product.nutrition_info %></p>
<p><strong>Brand:</strong> <%= @product.brand.name if @product.brand %></p>

<p><strong>Origin Countries:</strong>
  <%= @product.countries.map(&:name).join(', ') if @product.countries.any? %>
</p>

<p><strong>Categories:</strong>
  <%= @product.categories.map(&:name).join(', ') if @product.categories.any? %>
</p>

<!-- Add this link at the bottom -->
<p><%= link_to "Back to Products", products_path %></p>