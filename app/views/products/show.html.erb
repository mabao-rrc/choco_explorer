<h1><%= @product.name %></h1>

<% if @product.image_url.present? %>
  <img src="<%= @product.image_url %>" alt="<%= @product.name %>" width="300">
<% end %>

<p><strong>Description:</strong> <%= @product.description %></p>

<p><strong>Brand:</strong> <%= @product.brand.name if @product.brand %></p>

<p><strong>Origin Countries:</strong>
  <% if @product.countries.any? %>
    <% @product.countries.each do |country| %>
      <%= country.name %><% unless country == @product.countries.last %>, <% end %>
    <% end %>
  <% else %>
    Unknown
  <% end %>
</p>

<p><strong>Categories:</strong>
  <% if @product.categories.any? %>
    <% @product.categories.each do |category| %>
      <%= category.name %><% unless category == @product.categories.last %>, <% end %>
    <% end %>
  <% else %>
    None
  <% end %>
</p>

<p><strong>Created at:</strong> <%= @product.created_at.strftime("%B %d, %Y") %></p>